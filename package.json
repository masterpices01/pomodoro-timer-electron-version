{
  "name": "pomodoro-timer",
  "version": "1.0.0",
  "description": "A simple Pomodoro Timer built with Electron",
  "main": "main.js",
  "author": "Your Name",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "dependencies": {
    "electron-store": "^8.2.0"
  },
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.yourname.pomodoro",
    "productName": "Pomodoro Timer",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}